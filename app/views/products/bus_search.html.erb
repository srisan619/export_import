<%= label_tag :to%>
<%#= text_field_tag :to , nil, :size=>13, :placeholder => 'destination point'%>
 <%= select_tag "city_to_id",options_from_collection_for_select(@city, 'id','name') , {:include_blank => 'Destination' }%>
<%end%>
</div>
  <br/>
