<fieldset style="width: 450px">
  <legend>Online Booking</legend>
  <div align="left">
<%=  form_tag bus_search_products_path,  :remote => true  do %>
 <%#=  form_tag   :url => {:action => 'bus_search'}, :remote => true, :method => :get do %>
<%=  label_tag :from%>
