<%= link_to 'Product', products_path %>

<%= form_for @search do |f|%>
<p>
 <%=f.label :name_contains%>
<%=f.text_field :name_contains %>
</p>
<p>
 <%=f.label :category_number_gte, 'Category No. From '%>
<%=f.text_field :category_number_gte, :size => 3 %>

 <%=f.label :category_number_lte, 'Category No. To '%>
<%=f.text_field :category_number_lte, :size => 3 %>
</p>
<p class="button" ><%=f.submit 'Search'%></p>
<%end%>


<h1>Listing categories</h1>
<p>
  Sort By:
  <%=  sort_link @search , :name%> |
  <%=  sort_link @search , :category_type%> |
  <%=  sort_link @search , :category_number%>
</p>
<table class="pretty">
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Category No.</th>
    <th colspan="3">Operations</th>
    
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.category_type %></td>
    <td><%= category.category_number %></td>
    <td><%= link_to 'Show', category %></td>
    <td><%= link_to 'Edit', edit_category_path(category) %></td>
    <!--<td><%= link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :delete %></td> -->
    <td><%= button_to "Delete",category, :method=>:delete, :class=>:destroy %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_category_path %>

